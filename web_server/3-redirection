#!/usr/bin/env bash
# Configure nginx server with 301 redirect

# Install nginx if not already installed
sudo apt-get update
sudo apt-get install -y nginx

# Create index.html with required content
echo "Holberton School" | sudo tee /var/www/html/index.html

# Configure redirect using sed
sed -i '/server_name _;/a \    location /redirect_me {\n        return 301 https://www.tiktok.com/@junu.levi/photo/7421925573800267013?is_from_webapp=1&sender_device=pc&web_id=7421182616882382341;\n    }' /etc/nginx/sites-available/default

# Restart nginx to apply changes
service nginx restart
